@model Collaboration.Models.ProfileView

@{
    ViewBag.Title = "Profile";
}



 

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-8">
        <section id="profileForm">
          
         @Html.AntiForgeryToken()


            @{
                string user = "";
                if (User.Identity.Name == user)
                {
                    string fname = Model.FirstName;
                    string laname = Model.LastName;
                    string jobT = Model.JobRole;
                    string teamN = Model.TeamName;
                }
            }
          
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                   

                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                    @Html.DisplayFor(m => m.FirstName)
                        @{

                            string name;

                            if (User.Identity.Name == "Rachel@collaboration.com")
                            {
                                name = "Rachel";
                                @Html.Label(name, new { @class = "col-md-2 control-label" })

                            }
                            if (User.Identity.Name == "Leon@collaboration.com")
                            {
                                name = "Leon";
                                @Html.Label(name, new { @class = "col-md-2 control-label" })

                            }
                        }
                        </div>
                    </div>
                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @{

                                string lname;

                                if (User.Identity.Name == "Rachel@collaboration.com")
                                {
                                    lname = "Byrne";
                                    @Html.Label(lname, new { @class = "col-md-2 control-label" })

                                }
                                if (User.Identity.Name == "Leon@collaboration.com")
                                {
                                    lname = "Tanfin";
                                    @Html.Label(lname, new { @class = "col-md-2 control-label" })

                                }
                            }
                            </div>
                            @Html.LabelFor(m => m.JobRole, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @{

                                    string job;

                                    if (User.Identity.Name == "Rachel@collaboration.com")
                                    {
                                        job = "Technincal Support";
                                        @Html.Label(job, new { @class = "col-md-2 control-label" })

                                    }
                                    if (User.Identity.Name == "Leon@collaboration.com")
                                    {
                                        job = "BOMi Build&Design";
                                        @Html.Label(job, new { @class = "col-md-2 control-label" })
                                    }

                                }
                                </div>

                                @Html.LabelFor(m => m.TeamName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @{

                                        string team;

                                        if (User.Identity.Name == "Rachel@collaboration.com")
                                        {
                                            team = "Collaboration Design";
                                            @Html.Label(team, new { @class = "col-md-2 control-label" })
                                        }

                                        if (User.Identity.Name == "Leon@collaboration.com")
                                        {
                                            team = "BOMi Design Team";
                                            @Html.Label(team, new { @class = "col-md-2 control-label" })

                                        }
                                    }
                                    </div>

            </section>

                                </div>
                    </div>
                   
                

@section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
}
