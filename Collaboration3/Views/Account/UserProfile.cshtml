@model Collaboration.Models.ProfileView

@{
    ViewBag.Title = "UserProfile";
}

<h2>@ViewBag.Title</h2>

 <div style="width:100%;">
    <div style="float:left; width:80%;">


        <section id="profileForm">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @{


                        if (User.Identity.Name == "Leon@collaboration.com")
                        {
                            <img src="~/Images/Leon.jpg" style="height:200px;width:200px;" />

                        }
                    }

                </div>

                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @{


                        if (User.Identity.Name == "Leon@collaboration.com")
                        {
                            string name;
                            name = "Leon";
                            @Html.Label(name, new { @class = "col-md-2 control-label" })

                        }
                    }
                </div>
            </div>
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @{


                    if (User.Identity.Name == "Leon@collaboration.com")
                    {
                        string lname;
                        lname = "Tanfin";
                        @Html.Label(lname, new { @class = "col-md-2 control-label" })

                    }
                }
            </div>
            @Html.LabelFor(m => m.JobRole, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @{


                    if (User.Identity.Name == "Leon@collaboration.com")
                    {
                        string job;
                        job = "BOMi Build&Design";
                        @Html.Label(job, new { @class = "col-md-2 control-label" })
                    }

                }
            </div>

            @Html.LabelFor(m => m.TeamName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @{

                    string team;



                    if (User.Identity.Name == "Leon@collaboration.com")
                    {
                        team = "BOMi Design Team";
                        @Html.Label(team, new { @class = "col-md-2 control-label" })

                    }
                }
            </div>



        </section>


    </div>
</div>


