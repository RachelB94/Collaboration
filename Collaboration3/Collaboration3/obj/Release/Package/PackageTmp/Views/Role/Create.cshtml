
@{
    ViewBag.Title = "Create";
}

    <h2 style="padding-left:500px">Create Role</h2>

    <a style="padding-left:500px">@Html.ActionLink("List Roles", "Index") | @Html.ActionLink("Manage User Role", "ManageUserRoles")</a>
    </hr>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div style="padding-left:500px; padding-top:10px">
            Role name
            <p>

                @Html.TextBox("RoleName")

                <input class="btn btn-primary btn-sm" type="submit" value="Save" style="border-radius: 24px; padding-left:10px" />
            </p>


            

        </div>


    }
