
@{
    ViewBag.Title = "Home Page";
}

<!--Image Carousal-->
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="padding-left:300px">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/Col1.png" alt="Chania" style="height:300px; width:500px;">
        </div>

        <div class="item">
            <img src="~/Content/Images/collaboration.jpeg" alt="Chania" style="height:300px; width:500px;">
        </div>

        <div class="item">
            <img src="~/Content/Images/col3.jpg" alt="Chania" style="height:300px; width:500px;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--Hit Counter-->
<div style="border:solid; font-size:20px; padding-left:400px">
        Current number of Site Vistors: @Collaboration3.MvcApplication.CurrentNumberOfUsers
        </div>
    

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <h2 style="padding-left:100px">Files</h2>
        <p>
            Share Point allows Businesses to collaborate together. Allowing file and document sharing, it also provides file permissions to provide file security.
            Here is a demonstration of File Permissions, it will give you the permission to upload and download files based on your role.
        <p style="padding-left:80px"><a class="btn btn-default"  href="@Url.Action("Index", "File")">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-1">

    </div>
    <div class="col-md-4">
        <h2>Learn More</h2>
        <p>Collaboration is a demonstration of The Departments of Social Protection internal SharePoint. Learn More Here</p>
        <p><a class="btn btn-default" href="@Url.Action("About", "Home")">Learn more &raquo;</a></p>
    </div>
</div>